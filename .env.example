# n8n Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.example.com/

# PostgreSQL Database Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# n8n Basic Auth
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_admin_password_here

# Encryption Key (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=your_encryption_key_here

# Timezone
GENERIC_TIMEZONE=Asia/Bangkok

# SMTP Configuration (choose one provider below)
N8N_EMAIL_MODE=smtp

# Gmail SMTP (requires App Password)
# N8N_SMTP_HOST=smtp.gmail.com
# N8N_SMTP_PORT=465
# N8N_SMTP_USER=your-email@gmail.com
# N8N_SMTP_PASS=your-app-password
# N8N_SMTP_SSL=true

# Custom SMTP Server
# N8N_SMTP_HOST=mail.your-domain.com
# N8N_SMTP_PORT=587
# N8N_SMTP_USER=your-email@your-domain.com
# N8N_SMTP_PASS=your-password
# N8N_SMTP_SSL=false

# Logging and Monitoring
N8N_LOG_LEVEL=info
N8N_DIAGNOSTICS_ENABLED=false

# Optional: User Management (for multi-user setup)
# N8N_USER_MANAGEMENT_DISABLED=false
# N8N_USER_MANAGEMENT_JWT_SECRET=your-jwt-secret-here

# Optional: External node modules
# NODE_FUNCTION_ALLOW_EXTERNAL=moment,lodash